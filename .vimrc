setlocal softtabstop=4
setlocal tabstop=4
setlocal shiftwidth=4

set number

" Remove the easy mobility
nnoremap <Up> <Nop>
nnoremap <Down> <Nop>
nnoremap <Left> <Nop>
nnoremap <Right> <Nop>

" Make things a little more challenging in insert mode
inoremap <Up> <Nop>
inoremap <Down> <Nop>
inoremap <Left> <Nop>
inoremap <Right> <Nop>
